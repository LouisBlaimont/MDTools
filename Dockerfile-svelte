# Use an official Node.js runtime as a parent image
FROM node:18-alpine

# Set the working directory
WORKDIR /app

COPY --chown=1000:1000 package.json /app/
COPY --chown=1000:1000 . /app/

RUN chgrp 1000 /app
RUN chmod g+rw /app

# Clear npm cache and install dependencies
RUN npm cache clean --force && npm install

# Build the Svelte application
RUN npm run build

# Expose the port the app runs on
EXPOSE 5000

# Command to run the application
CMD ["npm", "run", "start"]
=======
# Stage 1: Build the SvelteKit app
FROM node:18 AS build

# Set working directory in the container
WORKDIR /app

# Copy package files and install dependencies
COPY ./frontend/package*.json ./
RUN npm install

# Copy the entire SvelteKit project from /frontend
COPY ./frontend ./

# Build the application
RUN npm run build

# Stage 2: Create a minimal container for the production server
FROM node:18-slim AS runner

# Set the UID and GID
ENV USER_ID=2000
ENV GROUP_ID=2000

# Set working directory in the container
WORKDIR /app

# Create a non-root user
RUN addgroup --system --gid ${GROUP_ID} appgroup
RUN adduser --system --uid ${USER_ID} --ingroup appgroup appuser

# Copy the built application and node_modules from the build stage
COPY --from=build /app/build ./build
COPY --from=build /app/node_modules ./node_modules
COPY --from=build /app/package*.json ./

# Change ownership of the application files to the non-root user
RUN chown -R appuser:appgroup /app

# Switch to the non-root user
USER appuser:appgroup

# Expose the port SvelteKit uses by default
EXPOSE 3000

# Start the SvelteKit server
CMD ["node", "./build/index.js"]
